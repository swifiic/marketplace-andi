<?xml version="1.0" encoding="utf-8"?>
  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">   
     
 <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/black_background"
        android:scrollHorizontally="true"
        android:shrinkColumns="1"
        android:stretchColumns="1"
         >

   
    <ImageView
  				    android:layout_width="match_parent"
  				    android:layout_height="wrap_content"
  				    android:layout_marginLeft="10dip"
  				    android:src="@drawable/marketplace" />
    
  
   
      <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
             >
       <TextView
       android:id="@+id/aboutappnametv"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppName : "
       android:textColor="#ff0000"
      android:layout_marginLeft="5dip"
        android:textAppearance="?android:attr/textAppearanceLarge"
       />
       
       
       <TextView
        android:id="@+id/abouttvappname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AppName : "
        android:textColor="#00ff00"
         android:layout_marginRight="10dip"
        android:textAppearance="?android:attr/textAppearanceLarge" />
   </TableRow>
   
      <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="15dip">
      
      <TextView
        android:id="@+id/aboutversiontv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version : "
        android:layout_marginLeft="5dip"
        android:textColor="#ff0000"
        android:textAppearance="?android:attr/textAppearanceLarge" />
<TextView
        android:id="@+id/abouttvversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version"
        android:textColor="#00ff00"
         android:layout_marginRight="10dip"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
   </TableRow>

      <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="15dip">
      
           <ImageView
        android:id="@+id/aboutivProfile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/androidimage" 
        />
          
          
      </TableRow>
    <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginTop="15dip">
    
        <ImageView
        android:id="@+id/aboutivProfile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/request" 
        />
        
    <ImageView
        android:id="@+id/aboutivProfile3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/requestlist" 
        />
     <ImageView
        android:id="@+id/aboutivProfile1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home" 
        />
</TableRow>           
    <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            >
    
        <TextView
        android:id="@+id/aboutbrieftv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description : "
        android:layout_marginTop="25dip"
        android:textColor="#ff0000"
        android:layout_marginLeft="5dip"
        android:textAppearance="?android:attr/textAppearanceMedium" />
      
    <TextView
        android:id="@+id/abouttvbrief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description : "
        android:textColor="#00ff00"
        android:layout_marginTop="25dip"
       android:layout_marginRight="5dip"
       android:scrollHorizontally="true"
       android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceMedium" />
 
</TableRow>

    
    
    <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            >
        <TextView
        android:id="@+id/abouttvbrief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:textColor="#00ff00"
        android:layout_marginTop="25dip"
       android:layout_marginRight="5dip"
       android:scrollHorizontally="true"
       android:singleLine="false"
        android:textAppearance="?android:attr/textAppearanceMedium" />
 
</TableRow>
    
    
    
</TableLayout>

</ScrollView>
